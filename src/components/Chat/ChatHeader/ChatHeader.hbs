<div class="chat-header">
  <div class="chat-header-nav">
  </div>
  <div class="chat-header__avatar">
    {{#if chat.avatar}}
    <img class="chat-header__avatar-img" src="{{ chat.avatar }}" alt="chat-avatar" />
    {{else}}
    <img class="chat-header__avatar-img" src="{{ avatarPlaceholder }}" alt="chat-avatar" />
    {{/if}}
  </div>
  <div class="chat-header__details">
    <span class="chat-header__name">{{ chat.title }}</span>
    <span class="chat-header__status">ID: {{ chat.id }}</span>
  </div>
  {{{ ChatUsers }}}
</div>