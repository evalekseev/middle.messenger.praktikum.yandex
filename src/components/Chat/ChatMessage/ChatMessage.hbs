<div class="chat-message chat-message_style_{{#if type}}my{{else}}user{{/if}}">
  <div class="chat-message__avatar">
    {{#if avatar}}
    <img src="{{ avatar }}" class="chat-message__avatar-img" alt="user-avatar">
    {{else}}
    <img src="{{ avatarPlaceholder }}" class="chat-message__avatar-img" alt="user-avatar">
    {{/if}}
  </div>
  {{#if first_name}}
  <span class="chat-message__first-name">{{first_name}}</span>
  {{/if}}
  <p class="chat-message__message">{{content}}</p>
  <span class="chat-message__time">{{time}}</span>
</div>