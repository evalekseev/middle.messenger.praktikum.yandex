{{#> main page=pages.registration}}
<form action="" class="form">
  <div class="form__top">
    <img src="../images/icons/icon__account.svg" alt="account" class="registration-form__icon">
  </div>
  <div class="form__content-row form__content-row_direction_row">
    <div class="form__content-col form__content-col_margin_right">
      {{> input
      name='email'
      label='Почта'
      type='text'
      placeholder='...'
      class='form__input-wrap'
      }}
      {{> input
      name='login'
      label='Логин'
      type='text'
      placeholder='...'
      class='form__input-wrap'
      }}
      {{> input
      name='password'
      label='Пароль'
      type='password'
      placeholder='...'
      class='form__input-wrap'
      }}
      {{> input
      name='password'
      label='Пароль (еще раз)'
      type='password'
      placeholder='...'
      class='form__input-wrap'
      }}
    </div>
    <div class="form__content-col form__content-col_margin_left">
      {{> input
      name='first_name'
      label='Имя'
      type='text'
      placeholder='...'
      class='form__input-wrap'
      }}
      {{> input
      name='second_name'
      label='Фамилия'
      type='text'
      placeholder='...'
      class='form__input-wrap'
      }}
      {{> input
      name='phone'
      label='Телефон'
      type='text'
      placeholder='...'
      class='form__input-wrap'
      }}
    </div>
  </div>
  </div>
  <div class="form__bottom">
    <a href="./chats.hbs" class="button form__button">Зарегистрироваться</a>
    <a href="./index.hbs" class="button button_style_onlytext">Войти</a>
  </div>

</form>
{{/main}}